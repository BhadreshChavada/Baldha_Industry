            android:src="@drawable/baldha_industries" />

    -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_bg">

        <TextView
            android:id="@+id/textView_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/blue"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/baldha_industries"
            android:text="Baldha Industry PVT. LTD"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_25sdp" />

        <!--<ImageView
            android:id="@+id/textView_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/baldha_industries" />-->

        <Button
            android:id="@+id/btn_neworder"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="130dp"
            android:background="@drawable/hexagon_gray"
            android:padding="@dimen/_15sdp"
            android:text="Add New Order"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btn_list_order"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignLeft="@+id/btn_neworder"
            android:layout_alignStart="@+id/btn_neworder"
            android:layout_alignTop="@+id/btn_neworder"
            android:layout_marginLeft="64dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="71dp"
            android:background="@drawable/hexagon_blue"
            android:text="List of Order"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btn_daily_report"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignTop="@+id/btn_list_order"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/btn_list_order"
            android:layout_toRightOf="@+id/btn_list_order"
            android:background="@drawable/hexagon_blue"
            android:text="Daily Report"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/button4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignEnd="@+id/btn_daily_report"
            android:layout_alignRight="@+id/btn_daily_report"
            android:layout_below="@+id/btn_list_order"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/hexagon_gray"
            android:text="Add CFF"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btn_start_shift"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignLeft="@+id/btn_list_order"
            android:layout_alignStart="@+id/btn_list_order"
            android:layout_below="@+id/btn_list_order"
            android:layout_marginTop="73dp"
            android:background="@drawable/hexagon_blue"
            android:text="Start       Shift"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btn_end_shift"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignTop="@+id/btn_start_shift"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/btn_start_shift"
            android:layout_toStartOf="@+id/btn_start_shift"
            android:background="@drawable/hexagon_blue"
            android:text="End          Shift"
            android:textColor="@android:color/white" />
    </RelativeLayout>


</LinearLayout>